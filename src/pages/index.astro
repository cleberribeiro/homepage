<style>
  @font-face {
    font-family: IBMPlexMono-Bold;
    src: url(/fonts/IBM_Plex_Mono/IBMPlexMono-Bold.ttf);
  }
  @font-face {
    font-family: IBMPlexMono-LightItalic;
    src: url(/fonts/IBM_Plex_Mono/IBMPlexMono-LightItalic.ttf);
  }
  @font-face {
    font-family: IBMPlexMono-Light;
    src: url(/fonts/IBM_Plex_Mono/IBMPlexMono-Light.ttf);
  }
  @font-face {
    font-family: IBMPlexMono-Medium;
    src: url(/fonts/IBM_Plex_Mono/IBMPlexMono-Medium.ttf);
  }

  main {
    margin: auto;
    padding: 1rem;
    width: 960px;
    max-width: calc(100% - 2rem);
    color: #357e6d;
    font-size: 20px;
    line-height: 1.6;
    display: flex;
    flex-direction: column;
    align-content: space-around;
  }

  .content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 100%;
    height: 700px;
  }

  .logo {
    width: 500px;
  }

  .wrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .logo .wrapper .title {
    font-family: IBMPlexMono-Bold;
    font-size: 3.6rem;
    font-weight: 700;
    line-height: 1;
    text-align: right;
  }

  .logo .wrapper .subtitle {
    font-family: IBMPlexMono-LightItalic;
    font-size: 1.4rem;
    font-weight: 300;
    line-height: 1;
    text-align: right;
  }

  .header {
    font-family: IBMPlexMono-Medium;
    border-bottom: solid 1px #e36840;
    height: 60px;
  }
  .footer {
    margin-top: auto;
    font-family: IBMPlexMono-Light;
    font-size: 0.9rem;
    border-top: solid 1px #e36840;
    height: 24px;
    padding: 1rem 0 1rem 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    position: absolute;
    bottom: 0;
    width: 960px;
  }

  .icons {
    display: flex;
    flex-direction: row;
  }

  .github {
    margin: 0 0.4rem 0 0.4rem;
  }

  .linkedin {
    margin: 0 0.4rem 0 0;
  }

	.presentation {
		width: 180px;
	}
  .typewriter h4 {
    overflow: hidden; /* Ensures the content is not revealed until the animation */
    border-right: 0.15em solid #e36840; /* The typwriter cursor */
    white-space: nowrap; /* Keeps the content on a single line */
    margin: 0 auto; /* Gives that scrolling effect as the typing happens */
    letter-spacing: 0.15em; /* Adjust as needed */
    animation:
      typing 1.5s steps(40, end),
      blink-caret 0.75s step-end infinite;
  }

  /* The typing effect */
  @keyframes typing {
    from {
      width: 0;
    }
    to {
      width: 100%;
    }
  }

  /* The typewriter cursor effect */
  @keyframes blink-caret {
    from,
    to {
      border-color: transparent;
    }
    50% {
      border-color: #e36840;
    }
  }
</style>
